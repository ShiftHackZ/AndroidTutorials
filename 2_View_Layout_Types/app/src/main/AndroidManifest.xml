<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shifthackz.tutorial.l2_view_layout_types">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShiftHackZLesson2ViewLayoutTypes">
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.constraint.ConstraintSimpleLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.constraint.ConstraintLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.relative.RelativeLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.frame.FrameLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.linear.LinearLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.views.ViewComponentsActivity"
            android:exported="true" />
    </application>

</manifest>